generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskCategory {
  Compras
  Trabalho
  Estudos
  Saude
  Financeiro
  Casa
  Pessoal
  Outros
}

model User {
  id           String    @id @default(uuid())
  phone        String    @unique
  email        String    @unique
  passwordHash String
  name         String?
  mfaEnabled   Boolean   @default(false)
  mfaCode      String?
  mfaExpiresAt DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  tasks        Task[]
  reminders    Reminder[]
  appointments Appointment[]
  actions      UserAction[]

  @@index([email])
  @@index([phone])
}

model Task {
  id          String        @id @default(uuid())
  title       String
  description String?
  done        Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  category    TaskCategory?
  priority    TaskPriority?

  userId String
  user   User          @relation(fields: [userId], references: [id])

  items     TaskItem[]
  reminders Reminder[]

  @@index([userId])
  @@index([category])
  @@index([priority])
}

model TaskItem {
  id        String   @id @default(uuid())
  title     String
  done      Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  taskId String
  task   Task   @relation(fields: [taskId], references: [id])

  @@index([taskId])
}

model Appointment {
  id          String   @id @default(uuid())
  userId      String
  description String
  scheduledAt DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id])
  reminders Reminder[]

  @@index([userId])
  @@index([scheduledAt])
}

model Reminder {
  id String @id @default(uuid())

  taskId        String?
  task          Task?         @relation(fields: [taskId], references: [id])

  appointmentId String?
  appointment   Appointment?  @relation(fields: [appointmentId], references: [id])

  userId String
  user   User   @relation(fields: [userId], references: [id])

  remindAt DateTime
  message  String?

  sent   Boolean   @default(false)
  sentAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([taskId])
  @@index([appointmentId])
  @@index([remindAt])
  @@index([sent])
}

model UserAction {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  action    String
  payload   Json
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
